                    !addedMilk.userManual ||
                    !addedMilk.warning ||
                    !addedMilk.preserveInstructions ||
                    !addedMilk.brandId ||
                    !addedMilk.categoryId ||
                    !addedMilk.milkAgeId ||
                    !addedMilk.supplierId ||
