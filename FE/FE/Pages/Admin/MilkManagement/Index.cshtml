@section Scripts {
    @{
    @using Helpers;
    @using Models;

        var user = SessionHelper.GetObjectFromJson<User>(HttpContext.Session, "user");
        string token = null;
        if (user != null)
        {
            token = user.Token;
        }
    }
    <script>
        $(document).ready(function () {
            const toastLiveExample = document.getElementById('errorToast');
            const toastContent = document.getElementById('errorToastContent');
            const toastBootstrap = bootstrap.Toast.getOrCreateInstance(toastLiveExample);
            function ShowErrorToast(message = 'Something went wrong') {

                toastContent.innerHTML = `<strong> ${message} </strong>`;
                toastBootstrap.show();
            }
            var milkTable;
            GetMilks();
            function GetMilks() {
                milkTable = $('#milkTable').DataTable({
                    ajax: {
                        url: 'http://localhost:5215/odata/Milk',
                        dataSrc: '$values'
                    },
                    columns: [
                        { data: 'id' },
                        { data: 'name' },
                        { data: 'description' },
                        { data: 'quantity' },
                        { data: 'price' },
                        {
                            data: null,
                            defaultContent: '<button class="btn btn-primary edit">Edit</button>',
                            orderable: false
                        }
                    ]
                });
            }
            var batchTable;
            function GetBatchTable(milkId) {
                if (batchTable) {
                    reloadTableWithNewMilkId(milkId);
                } else {
                    batchTable = $('#batchTable').DataTable({
                        ajax: {
                            url: 'http://localhost:5215/odata/Batches/GetBatchByMilkId/' + milkId,
                            dataSrc: '$values'
                        },
                        columns: [
                            { data: 'id' },
                            { data: 'importDate' },
                            { data: 'expiredDate' },
                            { data: 'importedPrice' },
                            { data: 'quantity' }
                        ]
                    });
                }
            }
            function reloadTableWithNewMilkId(milkId) {
                var newUrl = 'http://localhost:5215/odata/Batches/GetBatchByMilkId/' + milkId;
                batchTable.ajax.url(newUrl).load();
            }
            var addedBatchMilkId = 0;
            $('#milkTable').on('click', "button.edit", function () {
                var milkId = $(this).parents("tr").find("td:nth-child(1)").text();
                $.ajax({
                    url: "http://localhost:5215/odata/Category",
                    type: 'get',
                    contentType: 'application/json',
                    headers: {
                        'Authorization': 'Bearer ' + '@token'
                    },
                    success: function (result, status, xhr) {
                        if (result) {
                            $('#updateCategory').html('');
                            $.each(result.$values, function (index, value) {
                                $('#updateCategory').append($('<option>', {
                                    value: value.id,
                                    text: value.name
                                }));
                            });
                        } else {
                            ShowErrorToast('No category found');
                            document.getElementById('updateMilk').disabled = true;
                        }

                    },
                    error: function (xhr, status, error) {
                        ShowErrorToast();
                    }
                });
                $.ajax({
                    url: "http://localhost:5215/odata/Brands",
                    type: 'get',
                    contentType: 'application/json',
                    headers: {
                        'Authorization': 'Bearer ' + '@token'
                    },
                    success: function (result, status, xhr) {
                        if (result) {
                            $('#updateBrand').html('');
                            $.each(result.$values, function (index, value) {
                                $('#updateBrand').append($('<option>', {
                                    value: value.id,
                                    text: value.name
                                }));
                            });
                        } else {
                            ShowErrorToast('No brand found');
                            document.getElementById('updateMilk').disabled = true;
                        }

                    },
                    error: function (xhr, status, error) {
                        ShowErrorToast();
                    }
                });
                $.ajax({
                    url: "http://localhost:5215/odata/MilkAges",
                    type: 'get',
                    contentType: 'application/json',
                    headers: {
                        'Authorization': 'Bearer ' + '@token'
                    },
                    success: function (result, status, xhr) {
                        if (result) {
                            $('#updateMilkAge').html('');
                            $.each(result.$values, function (index, value) {
                                $('#updateMilkAge').append($('<option>', {
                                    value: value.id,
                                    text: `Từ ${value.min} ${value.unit} đến ${value.max} ${value.unit}`
                                }));
                            });
                        } else {
                            ShowErrorToast('No milk age found');
                            document.getElementById('updateMilk').disabled = true;
                        }

                    },
                    error: function (xhr, status, error) {
                        ShowErrorToast();
                    }
                });
                $.ajax({
                    url: "http://localhost:5215/odata/Supplier",
                    type: 'get',
                    contentType: 'application/json',
                    headers: {
                        'Authorization': 'Bearer ' + '@token'
                    },
                    success: function (result, status, xhr) {
                        if (result) {
                            $('#updateSupplier').html('');
                            $.each(result.$values, function (index, value) {
                                $('#updateSupplier').append($('<option>', {
                                    value: value.id,
                                    text: value.name
                                }));
                            });
                        } else {
                            ShowErrorToast('No supplier found');
                            document.getElementById('updateMilk').disabled = true;
                        }

                    },
                    error: function (xhr, status, error) {
                        ShowErrorToast();
                    }
                });
                $.ajax({
                    url: `http://localhost:5215/odata/Milk/${milkId}`,
                    type: 'get',
                    contentType: 'application/json',
                    headers: {
                        'Authorization': 'Bearer ' + '@token'
                    },
                    success: function (result, status, xhr) {
                        addedBatchMilkId = result['id'];
                        $('#updateId').val(result['id']);
                        $('#updateName').val(result['name']);
                        $('#updateDescription').val(result['description']);
                        $('#updatePrice').val(result['price']);
                        $('#updateUserManual').val(result['userManual']);
                        $('#updateWarning').val(result['warning']);
                        $('#updatePreserveInstructions').val(result['preserveInstructions']);
                        $('#updateBrand').val(result['brandId']);
                        $('#updateCategory').val(result['categoryId']);
                        $('#updateSupplier').val(result['supplierId']);
                        $('#updateImageUrl').val(result['imageUrl']);
                    },
                    error: function (xhr, status, error) {
                        ShowErrorToast();
                    }
                });
                GetBatchTable(milkId);
                $('#updateModal').modal('show');
            });
            document.getElementById('btnCreateBatch').addEventListener('click', function () {
                $('#batchMilkId').val(addedBatchMilkId);
                $('#createBatchModal').modal('show');
            });
            var addedBatch;
            document.getElementById('createBatch').addEventListener('click', function () {
                addedBatch = {
                    importDate: $("#batchImportedDate").val(),
                    expiredDate: $("#batchExpiredDate").val(),
                    importedPrice: $("#batchImportedPrice").val(),
                    quantity: $("#batchQuantity").val(),
                    milkId: $("#batchMilkId").val()
                };
                if (!addedBatch.importDate || !addedBatch.expiredDate || !addedBatch.importedPrice || !addedBatch.quantity || !addedBatch.milkId) {
                    ShowErrorToast("Vui lòng nhập tất cả trường");
                } else {
                    var currentMilkPrice = $('#updatePrice').val();
                    console.log(addedBatch.importedPrice);
                    if (addedBatch.importedPrice > currentMilkPrice) {
                        var userReponse = window.confirm("Current price is below imported price!");
                        if(userReponse) {
                            $.ajax({
                                url: "http://localhost:5215/odata/batches",
                                type: 'post',
                                data: JSON.stringify(addedBatch),
                                processData: false,
                                contentType: "application/json",
                                headers: {
                                    'Authorization': 'Bearer ' + '@token'
                                },
                                success: function (result, status, xhr) {
                                    document.getElementById("createBatchForm").reset();
                                    GetBatchTable(addedBatchMilkId);
                                    $('#createBatchModal').modal('hide');
                                },
                                error: function (xhr, status, error) {
                                    ShowErrorToast();
                                }
                            });
                        }
                    }
                    $.ajax({
                        url: "http://localhost:5215/odata/batches",
                        type: 'post',
                        data: JSON.stringify(addedBatch),
                        processData: false,
                        contentType: "application/json",
                        headers: {
                            'Authorization': 'Bearer ' + '@token'
                        },
                        success: function (result, status, xhr) {
                            document.getElementById("createBatchForm").reset();
                            GetBatchTable(addedBatchMilkId);
                            $('#createBatchModal').modal('hide');
                        },
                        error: function (xhr, status, error) {
                            ShowErrorToast();
                        }
                    });
                }
            });
            document.getElementById('btnCreateMilk').addEventListener('click', function () {
                $.ajax({
                    url: "http://localhost:5215/odata/Category",
                    type: 'get',
                    contentType: 'application/json',
