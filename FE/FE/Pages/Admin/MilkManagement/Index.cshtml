                    price: $("#createPrice").val(),
                    userManual: $("#createUserManual").val(),
                    warning: $("#createWarning").val(),
                    preserveInstructions: $("#createPreserveInstructions").val(),
                    brandId: $("#createBrand").val(),
                    categoryId: $("#createCategory").val(),
