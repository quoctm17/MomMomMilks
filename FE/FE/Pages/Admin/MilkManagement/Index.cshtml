@page
@model FE.Pages.Admin.MilkManagement.IndexModel
@{
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Milk Management
    </div>
    <div class="p-4">
        <button class="btn btn-success" id="btnCreateMilk">
            Create new milk
        </button>
    </div>
    <div class="card-body">
        <table class="table" id="milkTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </tfoot>
            <tbody class="font-weight-light">
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Milk</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="createForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="createName" class="form-label">Name: </label>
                        <input type="text" class="form-control" required id="createName">
                    </div>
                    <div class="mb-3">
                        <label for="createDescription" class="form-label">Description: </label>
                        <textarea type="text" class="form-control" required id="createDescription" rows="4"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="createPrice" class="form-label">Price: </label>
                        <input type="number" class="form-control" required id="createPrice">
                    </div>
                    <div class="mb-3">
                        <label for="createUserManual" class="form-label">User Manual: </label>
                        <input type="text" class="form-control" required id="createUserManual">
                    </div>
                    <div class="mb-3">
                        <label for="createWarning" class="form-label">Warning: </label>
                        <input type="text" class="form-control" required id="createWarning">
                    </div>
                    <div class="mb-3">
                        <label for="createPreserveInstructions" class="form-label">Preservation Instruction: </label>
                        <input type="text" class="form-control" required id="createPreserveInstructions">
                    </div>
                    <div class="mb-3">
                        <label for="createBrand" class="form-label">Brand: </label>
                        <select type="text" class="form-control" id="createBrand"></select>
                    </div>
                    <div class="mb-3">
                        <label for="createCategory" class="form-label">Category: </label>
                        <select type="text" class="form-control" id="createCategory"></select>
                    </div>
                    <div class="mb-3">
                        <label for="createMilkAge" class="form-label">Milk Age: </label>
                        <select type="text" class="form-control" id="createMilkAge"></select>
                    </div>
                    <div class="mb-3">
                        <label for="createSupplier" class="form-label">Supplier: </label>
                        <select type="text" class="form-control" id="createSupplier"></select>
                    </div>
                    <div class="mb-3">
                        <label for="imageUpload" class="form-label">Upload Image</label>
                        <input type="file" class="form-control" id="imageUpload">
                        <img src="" id="imageDisplay" style="display:none;width:300px;" />
                    </div>
                    <div class="mb-3">
                        <label for="createImageUrl" class="form-label">Image Url: </label>
                        <input type="text" class="form-control" disabled id="createImageUrl">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" id="createMilk">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Milk</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
