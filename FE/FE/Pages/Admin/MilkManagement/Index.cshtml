                            });
                        } else {
                            ShowErrorToast('No supplier found');
                            document.getElementById('createMilk').disabled = true;
                        }

                    },
                    error: function (xhr, status, error) {
                        ShowErrorToast();
                    }
                });
                $('#exampleModal').modal('show');
            });
