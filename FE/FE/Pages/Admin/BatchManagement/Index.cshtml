@page
@model FE.Pages.Admin.BatchManagement.IndexModel
@{
}
@if(Model.Batches.Count > 0)
{
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Batch Management
        </div>
        <div class="card-body">
            <table class="table" id="batchTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Imported Date</th>
                        <th>Expired Date</th>
                        <th>Imported Price</th>
                        <th>Quantity</th>
                        <th>Milk</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Imported Date</th>
                        <th>Expired Date</th>
                        <th>Imported Price</th>
                        <th>Quantity</th>
                        <th>Milk</th>
                    </tr>
                </tfoot>
                <tbody class="font-weight-light">
                    @foreach(var batch in Model.Batches)
                    {
                        if(batch != null)
                        {
                            <tr>
                                <th>@batch.Id</th>
                                <th>@batch.ImportDate</th>
                                <th>@batch.ExpiredDate</th>
                                <th>@batch.ImportedPrice</th>
                                <th>@batch.Quantity</th>
                                <th>@batch.Milk.Name</th>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#batchTable').DataTable();
        });
    </script>
}